<div class="outer">
  <div class="inner">
  
  <p id="notice"><%= notice %></p>
  
<h1>ログイン</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

  <%= f.label :Eメール %>
  <%= f.email_field :email %>

  <%= f.label :パスワード %>
  <%= f.password_field :password %>

  <%= f.submit "ログイン", class: 'btn btn-light' %>
<% end %>

  </div>
