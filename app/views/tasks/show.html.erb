<p id="notice"><%= notice %></p>
<h1>タスク 詳細</h1>
<p>
  <strong>タイトル</strong>
  <%= @task.title %>
</p>

<p>
  <strong>内容</strong>
  <%= @task.to_do %>
</p>

<p>
  <strong>終了期限</strong>
  <%= @task.deadline.strftime("%Y-%m-%d %H:%M") %>
</p>

<p>
  <strong>ステータス</strong>
  <%= @task.status %>
</p>

<p>
  <strong>優先順位</strong>
  <%= @task.priority %>
</p>

