<div class="outer">
  <div class="inner">

<h1>ユーザー管理画面</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザー名</th>
      <th>タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr class="admin_user_row">
        <td><%= user.id %>:</td>
        <td><%= user.name %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to '詳細', admin_user_path(user.id), class: 'btn btn-light' %></td>
        <td><%= link_to '更新', edit_admin_user_path(user), class: 'btn btn-light' %></td>
        <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'ユーザー作成', new_admin_user_path, class: 'btn btn-light' %>
  </div>
</div>