<p>閲覧中のユーザー：<%= @user.name %></p>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>優先順位</th>
      <th>作成者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @user.tasks.each do |task| %>
    <tr class="task_row">
      <td><%= task.title %></td>
      <td><%= task.to_do %></td>
      <td><%= task.deadline.strftime("%Y-%m-%d") %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
      <td><%= current_user.name %></td>
      <td><%= link_to '詳細', task, class: 'btn btn-light' %></td>
    </tr>
  <% end %>
</tbody>
<%= link_to '新規作成', new_task_path, class: 'btn btn-light' %>
<%= link_to 'タスク一覧', tasks_path, class: 'btn btn-light' %>

</tbody>
</table>
<br>
<%= link_to '戻る', admin_users_path, class: 'btn btn-light' %>