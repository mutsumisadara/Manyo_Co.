<div class="outer">
  <div class="inner">

<h1>新規登録</h1>
<%= form_with(model: @user, local: true) do |f| %>

  <%= f.label :名前 %>
  <%= f.text_field :name %>

  <%= f.label :Eメール %>
  <%= f.email_field :email %>

  <%= f.label :パスワード %>
  <%= f.password_field :password %>

  <%= f.label :パスワード確認 %>
  <%= f.password_field :password_confirmation %>

  <div class="field">
  <%= f.label :管理者権限 %>
  <%= f.select :admin, User.admins.keys.to_a, include_blank: '選択してください', class: 'form-control', required: true %>
  </div>

  <%= f.submit "アカウントを作成する", class: 'btn btn-light' %>
<% end %>

  </div>
</div>