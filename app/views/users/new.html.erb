<%= form_with(model: @user, local: true) do |f| %>

    <div class="outer">
      <div class="inner">
    
    <h1>新規登録</h1>
    
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "件のエラーがあります") %></h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= f.label :名前 %>
      <%= f.text_field :name %>
      <%= f.label :Eメール %>
      <%= f.email_field :email %>
      <%= f.label :パスワード %>
      <%= f.password_field :password %>
      <%= f.label :パスワード確認 %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "アカウントを作成する", class: 'btn btn-light' %>
    <% end %>
    
      </div>
    </div>